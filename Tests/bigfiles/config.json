{
    "description": "Тест с виртуальными дисками - большие и малые файлы",
    "timeout": 60,
    "requires_sudo": true,
    "virtual_disks": {
        "hot_mb": 4,
        "cold_mb": 8
    },
    "setup": {
        "cold_files": [
            {"path": "small1.bin", "size_kb": 100},
            {"path": "small2.bin", "size_kb": 150},
            {"path": "small3.bin", "size_kb": 200},
            {"path": "large1.bin", "size_kb": 400},
            {"path": "large2.bin", "size_kb": 500},
            {"path": "large3.bin", "size_kb": 600},
            {"path": "large4.bin", "size_kb": 700}
        ]
    },
    "assertions": {
        "description": "Малые файлы на hot (SizeRule сортирует по возрастанию)",
        "min_small_on_hot": 2
    }
}
